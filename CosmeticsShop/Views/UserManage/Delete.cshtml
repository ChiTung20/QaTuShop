@model CosmeticsShop.Models.User

@{
    ViewBag.Title = "Xoá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>

<h3>Bạn có thật sự muốn xoá?</h3>
<div>

    @using (Html.BeginForm("Delete", "UserManage", FormMethod.Post, new { @enctype = "multipart/form-data" }))

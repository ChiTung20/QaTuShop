@model CosmeticsShop.Models.User
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    List<CosmeticsShop.Models.UserType> userTypes = ViewBag.UserTypeList as List<CosmeticsShop.Models.UserType>;
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý  Tài Khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Xem/Sửa Tài Khoản</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary">
                    @using (Html.BeginForm("Edit", "UserManage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        <input type="text" name="ID" value="@Model.ID" hidden />
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tên</label>
                                <input type="text" class="form-control" value="@Model.Name" required name="Name">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" value="@Model.Email" required name="Email">
                            </div>
                            <div class="form-group">
                                <label>Số Điện Thoại</label>
                                <input type="text" class="form-control" value="@Model.Phone" required name="Phone">
                            </div>
                            <div class="form-group">
                                <label>Loại Tài Khoản</label>
                                <select name="UserTypeID" class="form-control">
                                    @foreach (var item in userTypes)
                                    {
                                        if (item.ID == Model.UserTypeID)
                                        {
                                            <option value="@item.ID" selected>@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Địa Chỉ </label>
                                <input type="text" class="form-control" value="@Model.Address" required name="Address">
                            </div>
                            <div class="form-group">
                                <label>Hình 1</label>
                                <img src="~/Content/images/@Model.Avatar" alt="Alternate Text" style="width:15%;height:15%;border: solid 1px gray" />
                            </div>
                            <div class="form-group">
                                <label>Chọn ảnh đại diện mới</label>
                                <input type="file" class="form-control" name="ImageUpload">
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a href="/UserManage/" class="btn btn-light-secondary">Trở lại</a>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="vh-100 bg-image pt-3"
         style="background-image: url(@Url.Content("~/Content/Webapp/img/slider-1.png"));">
    <div class="mask d-flex align-items-center h-75 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Đăng ký tài khoản</h2>
                            <h6 style="color: red"> @ViewBag.message</h6>
                            <br />
                            <form method="post" action="/Home/PasswordUpdated">
                                <h6 style="font-size:15px">Vui Lòng Cập Nhật Thông Tin Tại Trang Thông Tin Khách Hàng Khi Đăng Ký Thành Công  </h6>
                                @*<div class="mb-3">
            <input type="text" name="Name" required class="form-control" placeholder="Họ Và Tên" aria-label="Name" aria-describedby="email-addon">
        </div>*@
                                <label for="newPassword">Hãy Nhập Mật Khẩu Mới Cho Tài Khoản Của Bạn:</label>
                                <div class="mb-3">
                                    <input type="password" id="newPassword" name="newPassword" required class="form-control form-control-lg" placeholder="Mật Khẩu" aria-label="Password" aria-describedby="email-addon">
                                </div>
                                @*<div class="mb-3">
            <input type="text" name="Phone" required class="form-control" placeholder="Số Điện Thoại" aria-label="Phone" aria-describedby="email-addon">
        </div>
        <div class="mb-3">
            <input type="text" name="Address" required class="form-control" placeholder="Địa Chỉ" aria-label="Address" aria-describedby="email-addon">
        </div>*@
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Đăng Ký</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bạn đã có tài khoản? <a href="login.html" class="text-primary">Đăng nhập ngay</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function check(input) {
        if (input.value != document.getElementById('Password').value) {
            input.setCustomValidity('Mật khẩu không trùng khớp');
        } else {
            input.setCustomValidity('');
        }
    }</script>
